<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white"
  android:paddingBottom="8dp">

  <include layout="@layout/merge_item_feed_header" />

  <TextView
    android:id="@+id/tv_item_question_normal_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="64dp"
    android:lineSpacingMultiplier="1.1"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@string/lorem_ipsum" />

  <Space
    android:id="@+id/spacer"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_item_question_normal_content" />

  <include layout="@layout/merge_item_feed_footer" />

</android.support.constraint.ConstraintLayout>