<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/padding_micro"
  app:layout_scrollFlags="scroll"
  tools:showIn="@layout/controller_profile">

  <android.support.v7.widget.CardView
    android:id="@+id/card_profile_points"
    android:layout_width="108dp"
    android:layout_height="108dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/card_profile_bounties"
    app:layout_constraintTop_toBottomOf="@+id/iv_profile_bg">

    <ImageView
      style="@style/Widget.Yoloo.ProfileCard.Image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/primary"
      app:srcCompat="@drawable/ic_bookmark_star_32dp" />

    <TextView
      android:id="@+id/tv_profile_points"
      style="@style/Widget.Yoloo.ProfileCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      android:gravity="center"
      tools:text="@string/label_profile_points" />

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/card_profile_bounties"
    android:layout_width="108dp"
    android:layout_height="108dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toRightOf="@+id/card_profile_points"
    app:layout_constraintRight_toLeftOf="@+id/card_profile_achievements"
    app:layout_constraintTop_toBottomOf="@+id/iv_profile_bg">

    <ImageView
      style="@style/Widget.Yoloo.ProfileCard.Image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/primary_yellow"
      app:srcCompat="@drawable/ic_coin_stack_32dp" />

    <TextView
      android:id="@+id/tv_profile_bounties"
      style="@style/Widget.Yoloo.ProfileCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      android:gravity="center"
      tools:text="@string/label_profile_bounties" />

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/card_profile_achievements"
    android:layout_width="108dp"
    android:layout_height="108dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/card_profile_bounties"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv_profile_bg">

    <ImageView
      style="@style/Widget.Yoloo.ProfileCard.Image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/primary_blue"
      app:srcCompat="@drawable/ic_flag_black_24dp" />

    <TextView
      android:id="@+id/tv_profile_achievements"
      style="@style/Widget.Yoloo.ProfileCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      android:gravity="center"
      tools:text="@string/label_profile_countries" />

  </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>